<%- include('./partials/header.ejs') %>
<div class="w-full h-screen flex-column items-center mt-0 inline-block bg-zinc-700 m-auto">
    <h1 class="text-2xl mt-5 text-white flex justify-center font-semibold">Create a new post</h1>
    <hr class="opacity-10 mt-3">
    <form action="/createpost" method="post" enctype="multipart/form-data" class="w-1/3 m-auto flex-column mt-16">
        <input class="block w-3/4 px-3 py-2 rounded-md m-auto text-white" type="file" name="postimage">;
        <input class="block w-3/4 px-3 py-2 border-2 rounded-md m-auto" type="text" placeholder="Title" name="title">;
        <input class="block w-3/4 px-3 py-2 border-2 rounded-md m-auto" type="text"placeholder="Description" name="description">
        <input class="block w-1/2 px-3 py-2 rounded-md bg-red-700 text-white m-auto mt-6" type="submit" value="Create">
    </form>
</div>
